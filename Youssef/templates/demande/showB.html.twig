
{% extends 'baseoff.html.twig' %}
{% block body %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-hoS4eBvZsAJMMeVsYswFkoRFUJxpg3/q5qJXp6U4Y4LpPC5lQsBaZZFzZ02I5Ji3OrsdzP5EO8bcpBfVff2Ug==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <h1 style="text-align: center; color: #333; margin-bottom: 20px;">List of Demands</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Demande Details</th>
                <th scope="col">Description</th>
                <th scope="col">User ID</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for demande in demandes %}
                <tr>
                    <td>
                        <strong>Demande Details of offer:</strong> {{ demande.offre.nom }}
                    </td>
                    <td>
                        {{ demande.description }}
                    </td>
                    <td>
                        {{ demande.user.id }}
                    </td>
                    <td>
                        <ul class="demande-actions">
                            <li><a href="{{ path('app_demande_deleteB', {'id': demande.id}) }}" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a></li>
                            <li><a href="{{ path('app_demande_editB', {'id': demande.id}) }}" onclick="return confirm('Are you sure you want to edit this item?')">Edit</a></li>
                        </ul>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="no-records">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_demande_newB', {'id': id}) }}" class="btn btn-primary" style="margin-left: 15px;">Create New Demande</a>
    <a class="Btn" href="{{ path('app_offre_indexB') }}" >Back to list</a>
{% endblock %}
