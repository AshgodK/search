{{ form_start(form, {'attr': {'class': 'row g-3 needs-validation', 'novalidate': 'novalidate'}}) }}

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <div style="margin-top: 20px; margin-bottom: 10px"> <!-- Adjust the margin-bottom value as needed -->
                {{ form_label(form.description, 'Description :') }}
            </div>
            {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form_errors(form.description)|length ? ' is-invalid' : ''), 'placeholder': '(VOS KEDHE)', 'cols': 50, 'rows': 6}}) }}
            {% if form_errors(form.description)|length %}
                <div class="invalid-feedback">
                    {{ form_errors(form.description) }}
                </div>
            {% endif %}
        </div>
    </div>
    
    <!-- Add other fields here as needed -->
</div>

<div class="row">
    <div class="col-12">
        <button class="btn btn-primary" type="submit" style="margin-top: 20px;margin-bottom: 10px;">{{ button_label|default('Save') }}</button>
    </div>
    <div class="col-12">
    <a class="Btn" styles="margin-bottom: 10px" href="{{ path('user_offers', {'userId': userId, 'id': id}) }}" >Back to D list</a>
    </div>
</div>

{{ form_end(form) }}
