{% extends 'baseDou.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block mainnn %}
    <h1>Commande index</h1>

    <a href="{{ path('app_commande_most_ordered_services') }}" class="btn btn-primary">View Statistics</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Service</th>
                <th>Date</th>
                <th>Statut</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.service }}</td>
                <td>{{ commande.date ? commande.date|date('Y-m-d') : '' }}</td>
                <td>{{ commande.statut }}</td>
                <td>{{ commande.prix }}</td>
                <td>
                    <a href="{{ path('app_commande_showC', {'id': commande.id}) }}">Show</a>
                    <a href="{{ path('app_commande_editC', {'id': commande.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
