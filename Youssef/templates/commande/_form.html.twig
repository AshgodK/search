{# app/templates/commande_form.html.twig #}

{{ form_start(form, {'attr': {'class': 'row g-3 needs-validation', 'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}
    <div class="col-md-6">
        {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.date, {'attr': {'class': 'form-control' ~ (form_errors(form.date)|length ? ' is-invalid' : ''), 'id': 'validationCustomDate'}}) }}
        {% if form_errors(form.date)|length %}
            <div class="invalid-feedback">
                {{ form_errors(form.date) }}
            </div>
        {% endif %}
    </div>
<div class="col-md-6">
    {{ form_label(form.telephone, 'telephone', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.telephone, {'attr': {'class': 'form-control' ~ (form_errors(form.telephone)|length ? ' is-invalid' : ''), 'id': 'validationCustomStatut'}}) }}
    {% if form_errors(form.telephone)|length %}
        <div class="invalid-feedback">
            {{ form_errors(form.telephone) }}
        </div>
    {% endif %}
</div>
    <div class="col-md-6">
        {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.statut, {'attr': {'class': 'form-control' ~ (form_errors(form.statut)|length ? ' is-invalid' : ''), 'id': 'validationCustomStatut'}}) }}
        {% if form_errors(form.statut)|length %}
            <div class="invalid-feedback">
                {{ form_errors(form.statut) }}
            </div>
        {% endif %}
    </div>
    <div class="col-md-6">
        {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.prix, {'attr': {'class': 'form-control' ~ (form_errors(form.prix)|length ? ' is-invalid' : ''), 'id': 'validationCustomPrix'}}) }}
        {% if form_errors(form.prix)|length %}
            <div class="invalid-feedback">
                {{ form_errors(form.prix) }}
            </div>
        {% endif %}
    </div>
    <div class="col-md-6">
        {{ form_label(form.service, 'Service', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.service, {'attr': {'class': 'form-control' ~ (form_errors(form.service)|length ? ' is-invalid' : ''), 'id': 'validationCustomService'}}) }}
        {% if form_errors(form.service)|length %}
            <div class="invalid-feedback">
                {{ form_errors(form.service) }}
            </div>
        {% endif %}
    </div>
    <div class="col-md-6">
        {{ form_label(form.user, 'User', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.user, {'attr': {'class': 'form-control' ~ (form_errors(form.user)|length ? ' is-invalid' : ''), 'id': 'validationCustomUser'}}) }}
        {% if form_errors(form.user)|length %}
            <div class="invalid-feedback">
                {{ form_errors(form.user) }}
            </div>
        {% endif %}
    </div>

    <div class="col-12">
        <button class="btn btn-primary" type="submit">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}
