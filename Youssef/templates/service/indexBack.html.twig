{% extends 'baseDou.html.twig' %}

{% block title %}Service index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table {
            background-color: lightgray; /* Change the background color to light gray */
            color: white; /* Change the text color to white */
        }
    </style>
{% endblock %}

{% block mainnn %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Disponibilite</th>
                <th>Categorie</th>
                <th>Image</th>
                <th>Actions</th> <!-- Corrected 'actions' spelling -->
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.nom }}</td>
                <td>{{ service.description }}</td>
                <td>{{ service.disponibilite }}</td>
                <td>{{ service.categorie }}</td>
                <td>{{ service.image }}</td>
                <td>
                    <a href="{{ path('app_service_showback', {'id': service.id}) }}">show</a>
                    <a href="{{ path('app_service_editB', {'id': service.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <form action="{{ path('app_service_sort') }}" method="get">
        <button type="submit" class="btn btn-danger">Trier</button>
    </form>
    <a href="{{ path('app_service_newB') }}">Create new</a>
{% endblock %}
