{% extends 'baseDoua.html.twig' %}


{% block title %}Service Details{% endblock %}

{% block body %}
<style>
    body {
        background-image: url(/front/images/slide-01.jpg);
        background-size: cover;
        background-position: center;
        height: 100%;
        overflow-y: auto;
        margin: 0;
        padding: 0;
        background-attachment: fixed; /* Ensure the background image covers the entire height even when scrolling */
    }</style>
    <div class="container">
        <h1 class="mt-4">Service Details</h1>

        <div class="row">
            <div class="col-md-8">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 150px;">Id</th>
                            <td>{{ service.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ service.nom }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ service.description }}</td>
                        </tr>
                        <tr>
                            <th>Availability</th>
                            <td>{{ service.disponibilite }}</td>
                        </tr>
                        <tr>
                            <th>Category</th>
                            <td>{{ service.categorie }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>{{ service.image }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_service_index') }}" class="btn btn-secondary">Back to List</a>
                <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="btn btn-primary">Edit</a>
            </div>
            <div class="col-md-4">
                <img src="{{ asset('uploads/images/' ~ service.image) }}" alt="{{ service.nom }}" class="img-fluid">
            </div>
        </div>
    </div>
{% endblock %}
