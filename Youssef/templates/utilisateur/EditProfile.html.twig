{% extends 'baseF.html.twig' %}

 {% block body %}
<div class="container-fluid py-5" style="background-color: white;">
    <div class="container py-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-7 text-center">
                <h1 class="mb-4 text-green">Welcome User, You can edit your profile</h1>
            </div>

    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="wow fadeIn" data-wow-delay="0.3s" style="background-color: #fff; border: 1px solid #28a745; border-radius: 5px;">
                <div class="card-body p-4">
                    <a href="{{ path('app_profile', {'id': user.id}) }}"></a>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'name': 'my-form', 'id': 'my-form'}}) }}

                    <div class="form-group">
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.nom, 'Name', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Enter your name'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.prenom, 'LastName', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Enter your last name'}}) }}
                        {{ form_errors(form.prenom) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.adresse, 'Address', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Enter your Adress'}}) }}
                        {{ form_errors(form.adresse) }}
                    </div>
                     <div class="form-group">
                        {{ form_label(form.num_tel, 'Tel', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.num_tel, {'attr': {'class': 'form-control', 'placeholder': 'Enter your username'}}) }}
                        {{ form_errors(form.num_tel) }}
                    </div>
                      <div class="form-group">
                        {{ form_label(form.sexe, 'Gender', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.sexe, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.sexe) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.ImagePath, 'Image') }}
                        {{ form_widget(form.ImagePath, { 'attr': {'class': 'form-control'} }) }}
                        {% if form_errors(form.ImagePath) %}
                            <div class="text-danger">{{ form_errors(form.ImagePath) }}</div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.date_n, 'Date of Birth', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.date_n, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.date_n) }}
                    </div>

                    <div class="text-center mt-4">
                      <button type="submit" class="btn btn-primary btn-lg">{{ button_label|default('Save') }}</button>
<a href="{{ path('app_profile', {'id': app.user.id}) }}" class="btn btn-secondary btn-lg mx-2">Cancel</a>


                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
   {% endblock %}