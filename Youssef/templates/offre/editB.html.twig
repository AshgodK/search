
{% extends 'baseoff.html.twig' %}
{% block body %}
    <div class="form-container">
        <h1 style="margin-bottom: 20px">Update Offre</h1>
        <style>
            /* Adjust text color and background for better visibility */
            body {
                color: #fff; /* Text color */
                background-color: #333; /* Background color */
            }
            .form-container {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                z-index: 9999; /* Ensure it's above other elements */
                background-color: #222; /* Adjust the background color */
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(255, 255, 255, 0.1); /* Add a shadow for depth */
            }
            /* Adjust link color for better visibility */
            a {
                color: #ddd; /* Link color */
            }
            /* Adjust link hover color for better visibility */
            a:hover {
                color: #fff; /* Link hover color */
            }
        </style>
         {{ include('offre/_formB.html.twig', {'button_label': 'Update'}) }}
        
    </div>
{% endblock %}

